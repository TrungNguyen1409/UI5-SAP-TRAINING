<mvc:View
    controllerName="com.myorg.myapp.controller.CustomerList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Table
        class="sapUiResponsiveMargin"
        mode="SingleSelectLeft"
        selectionChange=".onCustomerChange"
        width="auto"
        id="customers"
        items="{
            path: '/customers',
            sorter:{path: 'city', group:true}
            }"
        growingThreshold="5"
        growing="true"
    >
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>customerListHeader}" />
                <ToolbarSpacer />
                <SearchField
                    width="40%"
                    search=".onFilterCustomers"
                />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <header>
                    <Text text="{i18n>firstName}" />
                </header>
            </Column>

            <Column>
                <header>
                    <Text text="{i18n>lastName}" />
                </header>
            </Column>

            <Column>
                <header>
                    <Text text="{i18n>street}" />
                </header>
            </Column>

            <Column>
                <header>
                    <Text text="{i18n>number}" />
                </header>
            </Column>

            <Column>
                <header>
                    <Text text="{i18n>zip}" />
                </header>
            </Column>

            <Column>
                <header>
                    <Text text="{i18n>city}" />
                </header>
            </Column>
        </columns>
        <items>
            <!-- Represents one roew of the customers list -->
            <ColumnListItem type="Navigation" press=".onPressCustomer">
                <cells>
                    <Text text="{firstName}" />
                    <Text text="{lastName}" />
                    <Text text="{street}" />
                    <Text text="{number}" />
                    <Text text="{zip}" />
                    <Text text="{city}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    <Table
        id="ordersTable"
        headerText="{i18n>orders}"
        items="{_orders}"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <columns>
            <Column>
                <header>
                    <Text text="{i18n>orderId}" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="{i18n>amount}" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="{i18n>currency}" />
                </header>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{orderId}" />
                    <Text text="{totalAmount}" />
                    <Text text="{currency}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
