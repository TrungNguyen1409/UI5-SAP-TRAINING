<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <List
        headerText="{i18n>customerListHeader}"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{customers>/customers}"
    >
        <items>
        <!-- Represents one roew of the customers list -->
            <ObjectListItem title="{customers>firstName}"/>
        </items>
    </List>
</mvc:View>
