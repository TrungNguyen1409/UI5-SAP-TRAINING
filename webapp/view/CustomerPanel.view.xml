<mvc:View
    controllerName="com.myorg.myapp.controller.CustomerPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Panel
        class="sapUiResponsiveMargin"
        width="auto"
        headerText="{i18n>customerPanelHeaderText}"
        expandable="true"
        expanded="true"
    >
        <content>
            <f:SimpleForm>
                <f:toolbar>
                    <!-- Provide layout information -->
                    <Toolbar>
                        <content>
                            <ToolbarSpacer />
                            <Button
                                text="{i18n>saveData}"
                                press=".onSaveData"
                            />
                        </content>
                    </Toolbar>
                </f:toolbar>
                <f:content>
                    <core:Title text="Contract Information" />
                    <Label text="{i18n>firstName}" />
                    <Input value="{customer>/firstName}" />
                    <Label text="{i18n>lastName}" />
                    <Input value="{customer>/lastName}" />
                    <Label text="{i18n>street}" />
                    <Input value="{customer>/street}" />
                    <Label text="{i18n>number}" />
                    <Input value="{customer>/number}" />
                    <Label text="{i18n>zip}" />
                    <Input value="{customer>/zip}" />
                    <Label text="{i18n>city}" />
                    <Input value="{customer>/city}" />
                    <Label text="{i18n>country}" />
                    <Input value="{customer>/country}" />
                    <core:Title text="E-mail and Phone" />
                    <Label text="{i18n>email}" />
                    <Input
                        value="{customer>/mail}"
                        type="Email"
                    />
                    <Label text="{i18n>phone}" />
                    <Input
                        value="{customer>/phone}"
                        type="Tel"
                    />
                </f:content>
            </f:SimpleForm>
        </content>
    </Panel>
</mvc:View>
