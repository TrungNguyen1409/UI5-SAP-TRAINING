<mvc:View
    controllerName="com.myorg.myapp.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    core:require="{
		formatter: 'com/myorg/myapp/model/formatter'
	}"
>
    <Page
        title="{i18n>appTitle}"
        id="page"
    >
        <content>
            <Panel headerText="{i18n>customerPanelHeaderText}" expandable="true" expanded="true">
				<content>
					<f:SimpleForm>
						<f:toolbar><!-- Provide layout information -->
							<Toolbar >
								<content>
									<ToolbarSpacer />
									<Button text="{i18n>saveData}" press=".onSaveData"/>
								</content>
							</Toolbar>
						</f:toolbar>
						<f:content>
							<core:Title text="Contract Information"/>
							<Label text="{i18n>firstName}"/>
							<Input value="{customer>/firstName}"/>
							<Label text="Last Name"/>
							<Input value="{i18n>lastName}"/>
							<Label text="Street"/>
							<Input value="{i18n>street}"/>
							<Label text="Number"/>
							<Input value="{i18n>number}"/>
							<Label text="ZIP"/>
							<Input value="{i18n>zip}"/>
							<Label text="City"/>
							<Input value="{i18n>city}"/>
							<Label text="Country"/>
							<Input value="{i18n>country}"/>
							<core:Title text="E-mail and Phone"></core:Title>
							<Label text="E-mail"/>
							<Input value="{i18n>email}" type="Email"/>
							<Label text="Phone"/>
							<Input value="{i18n>phone}" type="Tel"/>
						</f:content>
					</f:SimpleForm>
				</content>
            </Panel>
        </content>
    </Page>

</mvc:View>
